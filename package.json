{
  "name": "surveystack",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@gitlab.com:our-sci/software/surveystack.git",
  "author": "Our Sci",
  "license": "GPL-3.0-only",
  "private": true,
  "devDependencies": {
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2"
  },
  "scripts": {
    "prepare": "husky install; git config --local include.path ../.gitconfig",
    "client:start": "FORCE_COLOR=1 lerna --scope surveystack-client run start --no-prefix --stream",
    "client:build": "FORCE_COLOR=1 lerna --scope surveystack-client run build --no-prefix --stream",
    "client:test": "FORCE_COLOR=1 lerna --scope surveystack-client run test --no-prefix --stream",
    "client:test-watch": "FORCE_COLOR=1 lerna --scope surveystack-client run test-watch --no-prefix --stream",
    "client:lint": "FORCE_COLOR=1 lerna --scope surveystack-client run lint --no-prefix --stream",
    "server:start": "FORCE_COLOR=1 lerna --scope surveystack-server run start --no-prefix --stream",
    "server:build": "FORCE_COLOR=1 lerna --scope surveystack-server run build --no-prefix --stream",
    "build": "FORCE_COLOR=1 lerna run build --parallel --stream",
    "server:test": "FORCE_COLOR=1 lerna --scope surveystack-server run test --no-prefix --stream",
    "server:test-watch": "FORCE_COLOR=1 lerna --scope surveystack-server run test-watch --no-prefix --stream",
    "server:lint": "FORCE_COLOR=1 lerna --scope surveystack-server run lint-all --no-prefix --stream",
    "client:scaffold-partner": "FORCE_COLOR=1 lerna --scope surveystack-client run scaffold-partner --no-prefix --stream",
    "client:chromatic" : "FORCE_COLOR=1 lerna --scope surveystack-client run chromatic --no-prefix --stream"
  }
}
